# remd base_config

set inp  equinpt
set par  par_all36_prot_tip3.prm
set psf  aaqaa3_1_xplor.psf
set pdb  aaqaa3_solvate.pdb

#Bincoordinates     ${inp}.coor
#extendedsystem     ${inp}.xsc

timestep    2.0
#fullElectFrequency  2
stepspercycle           20

paraTypeCharmm	   on
parameters         ${par}
structure          ${psf} 
coordinates        ${pdb}
#binaryoutput       yes

#outputname          rest2_test
#outputEnergies       1000
#outputPressure       1000
#outputTiming         2000
#temperature 300.0

exclude             scaled1-4
1-4scaling          1.0
cutoff              12.
switching           on
switchdist          10.
pairlistdist        13.5
#LJcorrection        yes

wrapAll             on

PME                 on
#PMETolerance        10e-6
#PMEInterpOrder      4
PMEGridSpacing      1.0

cellBasisVector1     62.5943    0.   0.
cellBasisVector2     0.    62.5943   0.
cellBasisVector3     0.    0.     62.5943
cellOrigin           0.0   0.0   0.0

rigidBonds           all
#useSettle            on

useGroupPressure     yes
useFlexibleCell      no # allow anisotropic cell fluctuations?
useConstantRatio     no
useConstantArea      no
langevin                on
langevinTemp            300.0
langevinDamping         1.0
LangevinPiston          on
LangevinPistonTarget    1
LangevinPistonPeriod    100
LangevinPistonDecay     100
LangevinPistonTemp      300

commotion             no

soluteScaling           on
soluteScalingCol        O
soluteScalingFile       aaqaa3.spt

soluteScalingAll no
